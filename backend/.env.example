# ===========================================
# AI Chat Platform - Environment Configuration
# ===========================================

# Environment: development | staging | production
ENV=development
DEBUG=true

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=devdb
DATABASE_URL=postgresql+asyncpg://devuser:devpassword@postgres:5432/devdb

# ===========================================
# Authentication (JWT)
# ===========================================
# ⚠️ CHANGE THESE IN PRODUCTION!
ACCESS_TOKEN_SECRET_KEY=your-super-secret-access-key-change-in-production
REFRESH_TOKEN_SECRET_KEY=your-super-secret-refresh-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# ===========================================
# LLM Configuration
# ===========================================
LLM_PROVIDER=groq
LLM_API_KEY=your_groq_api_key_here
LLM_MODEL=llama-3.3-70b-versatile

# ===========================================
# Web Search (Tavily)
# ===========================================
# Get API key from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# ===========================================
# Memory (Mem0)
# ===========================================
# Leave empty for local storage, or add Mem0 API key
MEM0_API_KEY=

# ===========================================
# Vector Database (Qdrant)
# ===========================================
QDRANT_URL=http://qdrant:6333

# ===========================================
# Cache & Queue (Valkey/Redis)
# ===========================================
VALKEY_URL=redis://valkey:6379/0

# ===========================================
# Cloud Storage (Oracle OCI) - Optional
# ===========================================
# Leave empty to use local temp storage
OCI_CONFIG_FILE=~/.oci/config
OCI_CONFIG_PROFILE=DEFAULT
OCI_NAMESPACE=
OCI_BUCKET_NAME=
OCI_REGION=ap-mumbai-1